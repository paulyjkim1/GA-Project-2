<%- include('../partials/header',{user}) %>

<h1>Create a new post</h1>

<form action="/recipes" method="POST">
    

    <label for="recipe_author">Username:</label>
    <input type="text" class="form-control" id="recipe_author" name="recipe_name" value= <%= user.username >% required>

    <label for="recipe_name">Recipe Name:</label>
    <input type="text" class="form-control" id="recipe_name" name="recipe_name" required>


  <div class="form-group">
    <label for="author">Author</label>
    <select name="authorId" id="author" class="form-control" required>
      <% authors.forEach(function(author) { %>
        <option value="<%= author.id %>"><%= author.getFullName() %></option>
      <% }) %>
    </select>
    <p>If your name doesn't show up, please <a href="/authors/new">sign up to be an author.</a></p>
  </div>

  <div class="form-group">
    <label for="content">Content</label>
    <textarea type="text" class="form-control" id="content" name="content" required></textarea>
  </div>

  <input type="submit" class="btn btn-primary">
</form>

<%- include('../partials/footer') %>